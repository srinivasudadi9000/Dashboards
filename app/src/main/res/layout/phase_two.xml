<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="schemax.brandix_charts.Phase_two">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header_default"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/logobrandix" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:visibility="gone"
                        android:id="@+id/hardware"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/blue"
                        android:drawableRight="@drawable/forward_arrow"
                        android:text="Hardware"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:visibility="gone"
                        android:id="@+id/software"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/brandix_brown"
                        android:drawableRight="@drawable/forward_arrow"
                        android:text="Software"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <Button
                        android:visibility="gone"
                        android:id="@+id/ticket_vol_trends"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/blue"
                        android:drawableRight="@drawable/forward_arrow"
                        android:text="Ticket Volume Trends "
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:visibility="gone"
                        android:id="@+id/sla_trends"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/brandix_brown"
                        android:drawableRight="@drawable/forward_arrow"
                        android:text="SLA Adherence"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:visibility="gone"
                        android:id="@+id/cost_per_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorAccent"
                        android:drawableRight="@drawable/forward_arrow"
                        android:text="Cost Per Ticket "
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
